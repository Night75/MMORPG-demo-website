{% extends "LdcSurveyBundle::layout.html.twig" %}

{% set path_public = asset("bundles/ldcwebsite/") %}
{% set path_img =  asset("bundles/ldcwebsite/images/") %}

{% block stylesheets %}
	{{parent()}}
{% endblock %}

{% block body %}

<section id="survey">
	
	<h2>Sondage</h2>
	
	<div class="gn-panel-wrapper">
		<div class="bdr-top-left"></div>
		<div class="bdr-top-right"></div>
		
		<div class="gn-panel-container">
			<div class="survey-question">    
				<h3 class="title-small">{{survey.question}}</h3>
			</div>
			
				<form id="survey-data" action="{{ path('ldcsurveybundle_newform' ,{'id': survey.id} )}}" method="post" class="form_event">
					<div class="survey-answers">
							{% for answer in survey.answers %}
								<div class="row">
									<div><div class="hr-line-left"></div></div>
									<input type="radio" value="{{answer.id}}" required="required" name="survey_form_type[answers]" id="survey_form_type_answers_{{answer.id}}">
									<label class="required" for="survey_form_type_answers_{{answer.id}}">{{answer.answer}}</label>
								</div>
							{% endfor %}
						<div class="bt-wrapper-survey-validation">
							<input type="submit" class="bt-gold" value="Vote" />
						</div>
					</div>
				</form>	
				
		</div><!-- ========== Fin de .panel-container -->		
	</div><!-- ========== Fin de .panel-wrapper -->	
</section>

{% endblock %}