{% set path_public = asset("bundles/ldcwebsite/") %}
{% set path_img =  asset("bundles/ldcwebsite/images/") %}

<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<title>{% block title %}Ldc{% endblock %}</title>
	{% block stylesheets %}
		<link rel="stylesheet" href="{{path_public}}css/admin.css" type="text/css" />
	{% endblock %}
	{% block script %}
		<script type="text/javascript" src="{{asset('bundles/ldcwebsite/js/jquery.js')}}"></script>
		<script type="text/javascript" src="{{asset('bundles/ldcwebsite/js/admin.js')}}"></script>
	{% endblock%}
</head>


<body>
	<div id="container-full">
		
		<!-- __________________ ----------------- ************ HEADER ************----------------- __________________ -->
		<header>
			<div id="ldc-logo"><img src="{{path_img}}logo.png" alt=""/></div>
			<div id="ldc-title">
				<h1 title="Vengeful Spirits evanescence">
					<img src="{{path_img}}vengeful_spirits_evanescence.png" alt="Vengeful Spirits evanescence"/>
				</h1>  
			</div>	
			<div class="border_header"></div>
		</header>
		
		<div id="container-main">
			<!-- __________________ ----------------- ************ MENU ************----------------- __________________ -->
			<nav>
				<ul>
					<li class="bt-menu-light">
						<a href="{{path('ldcwebsitebundle_admin_index')}}">Accueil</a>
					</li><!--
				--><li class="bt-menu-light">
						<a href="{{path('ldcarticlebundle_list')}}">News</a>
					</li><!--
				--><li class="bt-menu-light">
						<a href="{{path('ldcsliderimagebundle_list')}}">Sliders</a>
					</li><!--
				--><li class="bt-menu-light">
						<a href="{{path('ldceventbundle_list')}}">Evenements</a>
					</li><!--
				--><li class="bt-menu-light">
						<a href="{{path('ldcsurveybundle_list')}}">Sondages</a>
					</li><!--
					{% if is_granted('ROLE_USER') %}
					--><li class="bt-menu-light">
							<a href="{{path('ldc_user_admin_list')}}">Utilisateurs</a>
						</li>
					{% endif %}
						<li class="bt-gold">
							<a href="{{path('ldcwebsitebundle_accueil')}}">Espace user</a>
						</li>
				</ul>
			</nav>
			
			<!-- __________________ ----------------- ************ CONTENU ************----------------- __________________ -->
			<div id="container-content">
				{% block body %}
				{% endblock %}
			</div> <!-- ========== Fin de #container-content -->
			
		</div> <!-- ========== Fin de #container-main -->		
		
		<!-- __________________ ----------------- ************ FOOTER ************----------------- __________________ -->
	{% block footer %}
	<footer>	
		<div class="border-footer"></div>
		<div id="copyright"><p>Copyright © 2009-2011 Lightning Demons Chronicles. All Rights Reserved.</p></div>
	</footer>
	{% endblock %}
	
	{% block javascripts %}
	{# Ajoutez ce javascript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
	<script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>
	{% endblock %}
</body>