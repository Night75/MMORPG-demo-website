{% extends "LdcWebsiteBundle::layout_admin.html.twig" %}

{% set path_img = asset("bundles/ldcwebsite/images/") %}
{% set path_img_article = asset("bundles/ldcwebsite/images/articles/") %}

{% block body %}
<div class="list-table">
	<h2>Liste des articles</h2>
	<div class="bk-icon-bt">
		<a class="title-small" href="{{path('ldcarticlebundle_new')}}"><img class="icon-tool" src="{{path_img}}icon_add.png" />  Ajouter un article</a>
	</div>
	<div class="msg-flash">
		  {% for key, message in app.session.getFlashes() %}
		        <p class="{{ key }}">
		            {{ message }}
		        </p>
		 {% endfor %}
	</div>
	<table>
		<caption></caption>
		<tr>
			<th>Image</th>
			<th>Titre</th>
			<th>Auteur</th>
			<th>Date de creation</th>
			<th>Editer</th>
			<th>Supprimer</th>
		</tr>	
	{% for article in articles %}
		<tr>
			<td><img class="list-img" src="{{path_img_article}}{{article.image | default('default.jpg')}}" /></td> 
			<td>{{article.title}}</td>
			<td>{{article.author}}</td>
			<td>le {{article.dateCreated |date ("d/m/Y \\Ã  H:i") }}</td>
			<td class="edit"><a href="{{path('ldcarticlebundle_edit', { 'id': article.id })}}"><img class="icon-tool" src="{{path_img}}icon_edit.png"></a></td>
			<td class="delete"><a href="{{path('ldcarticlebundle_delete', { 'id': article.id })}}"><img class="icon-tool" src="{{path_img}}icon_trash.png"></a></td>
		</tr>
	{% endfor%}
	</table>
</div>
{% endblock %}
